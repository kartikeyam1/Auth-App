<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!--
    This file contains suppression rules for OWASP Dependency Check
    Use this to suppress false positives or accepted risks
    
    Example suppression:
    <suppress>
        <notes><![CDATA[
        This suppresses a specific CVE for a specific dependency
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.example/example\-artifact@.*$</packageUrl>
        <cve>CVE-2021-12345</cve>
    </suppress>
    -->
    
    <!-- Spring Boot H2 Console - Development only, not in production -->
    <suppress>
        <notes><![CDATA[
        H2 console is only enabled in development environment
        and is properly secured in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.h2database/h2@.*$</packageUrl>
        <vulnerabilityName>CVE-2022-45868</vulnerabilityName>
    </suppress>
    
    <!-- Suppress logback classic vulnerabilities if using structured logging -->
    <suppress>
        <notes><![CDATA[
        Logback vulnerabilities are mitigated by proper configuration
        and not using affected features like JNDI lookup
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/ch\.qos\.logback/logback\-classic@.*$</packageUrl>
        <cve>CVE-2021-42550</cve>
    </suppress>
    
    <!-- Spring Security - Keep updated but suppress false positives -->
    <suppress>
        <notes><![CDATA[
        Spring Security version is kept up to date
        and proper security configurations are in place
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.security/.*@.*$</packageUrl>
        <cpe>cpe:/a:pivotal_software:spring_security</cpe>
    </suppress>
</suppressions>
